@model ProductViewModel
<table class="display container list-product">
    <button type="button" data-bs-toggle="modal" data-bs-target="#ModalAdd" class="btn btn-outline-primary">Add product</button>
    <thead>
        <tr>
            <th><h1>ID</h1></th>
            <th><h1>Image</h1></th>
            <th><h1>Name</h1></th>
            <th><h1>Description</h1></th>
            <th><h1>Price</h1></th>
            <th><h1>Category</h1></th>
            <th><h1>Action</h1></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Products)
        {
            <tr>
                <td>@p.Id</td>
                <td class="image"><img class="img-thumbnail" src="@p.Image"/></td>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.CategoryName</td>
                <td>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#ModalUpdate_@p.Id" class="btn btn-primary">Update</button>
                    <button type="button" data-bs-toggle="modal" data-bs-target="#modalDelete_@p.Id" class="btn btn-danger">Delete</button></td>
            </tr> 
                        <div class="modal fade" id="modalDelete_@p.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title fs-5" id="exampleModalLabel">Thông báo</h3> 
                                </div>
                                <div class="modal-body">
                                     <h2 style="color:red">
                                            Bạn có chắc là muốn xóa @p.Name ?
                                     </h2>  
                                </div>
                                <div class="modal-footer">
                                    <form method="post" asp-action="Delete" >
                                        <input type="hidden" value="@p.Id" name="id"/>
                                        <button type="submit" class="btn btn-primary">Xóa</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                    //form update 
                    <form method="post" asp-action="Update" asp-controller="Product">
                                <div class="modal fade" id="ModalUpdate_@p.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">   
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Thông báo</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                                     <input value="@p.Id" required type="hidden" asp-for="ProductRequest.Id"  id="id" />
                                           <div class="form-group">
                                                <label class="form-label" for="name">TÊN SẢN PHẨM</label>
                                                    <input class="form-control" value="@p.Name" type="text" id="name"   asp-for="ProductRequest.Name" required />
                                           </div>
                                            <div class="form-group">
                                                <label class="form-label" for="price">GIÁ</label>
                                                    <input class="form-control" value="@p.Price" type="number" id="price"  asp-for="ProductRequest.Price" />
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label" for="description">MÔ TẢ</label>
                                                    <textarea class="form-control" value="@p.Description" type="text" id="description"  asp-for="ProductRequest.Description"></textarea>
                                            </div>
                                            <div class="form-group"> 
                                                <label class="form-label" for="description">HÌNH ẢNH</label>
                                                    <input class="form-control" value="@p.Image" type="text" id="description" asp-for="ProductRequest.Image"/>
                                            </div>
                                            <div class="form-group">
                                                <label class="form-label">LOẠI SẢN PHẨM</label>
                                                <select class="form-select"  asp-for="ProductRequest.CategoryId">
                                                            @foreach (var cat in Model.Categories)
                                                            {
                                                            <option value="@cat.Id">@cat.Name</option>
                                                            }
                                                </select>
                                            </div>
                                        </div>   
                                        <div class="modal-footer">
                                            <button type="submit" class="btn btn-primary">Cập nhập</button>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                        </div> 
                                </div>
                            </div>
                        </div>
                    </form>
                
        }
    </tbody>
    
</table>
 
